@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "_AuthLayout";
}

<div class="auth-header">
    <h1 class="auth-title">Check Your Email</h1>
    <p class="auth-subtitle">Please check your email to reset your password.</p>
</div>

<div class="mb-4">
    <p class="text-center text-muted">A password reset link has been sent to the email address you provided, if it exists in our system.</p>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary w-100">Return to Home</a>
</div>
