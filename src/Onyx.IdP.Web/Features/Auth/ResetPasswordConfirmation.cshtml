@{
    ViewData["Title"] = "Reset Password Confirmation";
    Layout = "_AuthLayout";
}

<div class="auth-header">
    <h1 class="auth-title">Password Reset</h1>
    <p class="auth-subtitle">Your password has been reset.</p>
</div>

<div class="mb-4">
    <p class="text-center text-muted">You can now login with your new password.</p>
</div>

<div class="mt-4">
    <a asp-action="Login" class="btn btn-primary w-100">Login</a>
</div>
