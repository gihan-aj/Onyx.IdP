@model Onyx.IdP.Web.Features.Admin.Roles.RolesViewModel
@{
    ViewData["Title"] = "Roles";
    Layout = "_AdminLayout";
}

<div class="data-table-container">
    <div class="table-controls">
        <form asp-action="Index" method="get" class="search-box">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search roles..." />
            <input type="hidden" name="sortColumn" value="@Model.SortColumn" />
            <input type="hidden" name="sortDirection" value="@Model.SortDirection" />
        </form>
        <div class="table-actions">
            <a asp-action="Create" class="btn btn-primary btn-md">
                + New Role
            </a>
        </div>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-sortColumn="Name" 
                       asp-route-sortDirection="@(Model.SortColumn == "Name" && Model.SortDirection == "asc" ? "desc" : "asc")">
                        Name
                        @if (Model.SortColumn == "Name")
                        {
                            <span>@(Model.SortDirection == "asc" ? "↑" : "↓")</span>
                        }
                    </a>
                </th>
                <th>
                    <a asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-sortColumn="Description" 
                       asp-route-sortDirection="@(Model.SortColumn == "Description" && Model.SortDirection == "asc" ? "desc" : "asc")">
                        Description
                        @if (Model.SortColumn == "Description")
                        {
                            <span>@(Model.SortDirection == "asc" ? "↑" : "↓")</span>
                        }
                    </a>
                </th>
                <th>Users</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>
                            <span class="font-weight-bold">@role.Name</span>
                            @if (role.IsProtected)
                            {
                                <i data-lucide="shield" class="w-4 h-4 text-muted ms-1 d-inline" style="width:14px; height:14px;"></i>
                            }
                        </td>
                        <td>@role.Description</td>
                        <td>
                            <span class="badge badge-primary">@role.UserCount Users</span>
                        </td>
                        <td>
                            @if (role.IsActive)
                            {
                                <span class="badge bg-success text-white">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary text-white">Inactive</span>
                            }
                        </td>
                        <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-icon" data-tooltip="Edit">
                            <i data-lucide="edit-2"></i>
                        </a>
                        @if (!role.IsProtected)
                        {
                            <button type="button" 
                                    class="btn btn-icon @(role.IsActive ? "text-danger" : "text-success")"
                                    data-bs-toggle="modal" 
                                    data-bs-target="#toggleRoleModal"
                                    data-action="@Url.Action("ToggleActive", new { id = role.Id })"
                                    data-name="@role.Name"
                                    data-active="@role.IsActive.ToString().ToLower()"
                                    data-tooltip="@(role.IsActive ? "Deactivate" : "Activate")">
                                <i data-lucide="@(role.IsActive ? "power-off" : "power")"></i>
                            </button>

                            <button type="button" 
                                    class="btn btn-icon text-danger"
                                    data-bs-toggle="modal" 
                                    data-bs-target="#deleteRoleModal"
                                    data-action="@Url.Action("Delete", new { id = role.Id })"
                                    data-name="@role.Name"
                                    data-user-count="@role.UserCount"
                                    data-tooltip="Delete">
                                <i data-lucide="trash-2"></i>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-icon disabled" disabled data-tooltip="Protected">
                                <i data-lucide="lock" class="text-muted opacity-50"></i>
                            </button>
                        }
                    </div>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center py-4">
                <span class="text-muted">No roles found.</span>
            </td>
        </tr>
    }
    </tbody>
</table>

    <div class="table-pagination">
        @if (Model.HasPreviousPage)
        {
            <a asp-action="Index" 
               asp-route-page="@(Model.Page - 1)" 
               asp-route-searchTerm="@Model.SearchTerm" 
               asp-route-sortColumn="@Model.SortColumn" 
               asp-route-sortDirection="@Model.SortDirection" 
               class="page-link">
                Previous
            </a>
        }
        else
        {
            <span class="page-link disabled">Previous</span>
        }

        <span class="text-muted small">Page @Model.Page of @Model.TotalPages</span>

        @if (Model.HasNextPage)
        {
            <a asp-action="Index" 
               asp-route-page="@(Model.Page + 1)" 
               asp-route-searchTerm="@Model.SearchTerm" 
               asp-route-sortColumn="@Model.SortColumn" 
               asp-route-sortDirection="@Model.SortDirection" 
               class="page-link">
                Next
            </a>
        }
        else
        {
            <span class="page-link disabled">Next</span>
        }
    </div>
</div>

<!-- Toggle Role Status Modal -->
<div class="modal fade" id="toggleRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div id="toggleIconWrapper" class="mb-4">
                    <i id="toggleIcon" data-lucide="power" style="width: 48px; height: 48px;"></i>
                </div>
                
                <h2 id="toggleTitle" class="card-title mb-3"></h2>
                
                <p class="card-text text-muted mb-4">
                    Are you sure you want to <strong id="toggleActionText"></strong> the role <strong id="toggleRoleName"></strong>?
                </p>

                <form id="toggleRoleForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="d-grid gap-2">
                        <button id="toggleConfirmBtn" type="submit" class="btn">Confirm</button>
                        <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Role Modal -->
<div class="modal fade" id="deleteRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="mb-4 text-danger">
                    <i data-lucide="alert-triangle" style="width: 48px; height: 48px;"></i>
                </div>
                
                <h2 class="card-title mb-3">Delete Role?</h2>
                
                <p class="card-text text-muted mb-4">
                    Are you sure you want to delete the role <strong id="deleteRoleName"></strong>?
                    <br/>
                    This action cannot be undone.
                </p>

                <div id="deleteUserCountAlert" class="alert alert-warning text-start d-none">
                    <small>
                        <strong>Warning:</strong> This role is currently assigned to <strong id="deleteUserCount"></strong> users.
                        Deleting it will remove the role from these users.
                    </small>
                </div>

                <form id="deleteRoleForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">Yes, Delete Role</button>
                        <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle Modal Logic
        var toggleModal = document.getElementById('toggleRoleModal');
        toggleModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var action = button.getAttribute('data-action');
            var name = button.getAttribute('data-name');
            var isActive = button.getAttribute('data-active') === 'true';

            var form = toggleModal.querySelector('#toggleRoleForm');
            var titleEl = toggleModal.querySelector('#toggleTitle');
            var actionTextEl = toggleModal.querySelector('#toggleActionText');
            var nameEl = toggleModal.querySelector('#toggleRoleName');
            var confirmBtn = toggleModal.querySelector('#toggleConfirmBtn');
            var iconWrapper = toggleModal.querySelector('#toggleIconWrapper');
            // Note: We can't easily change the Lucide icon class dynamically after load without re-rendering or using the library's API.
            // But bootstrap modal just shows hidden content.
            // Simplest way: Toggle classes on the wrapper and change text. 
            // For the icon, since lucide replaces <i> tags with <svg>, we might need to manipulate the svg or just hide/show two icons.
            // OR: Just keep one icon (power) and change color.
            
            form.action = action;
            nameEl.textContent = name;

            if (isActive) {
                // Deactivate
                titleEl.textContent = "Deactivate Role?";
                actionTextEl.textContent = "deactivate";
                confirmBtn.className = "btn btn-danger";
                confirmBtn.textContent = "Yes, Deactivate";
                iconWrapper.className = "mb-4 text-danger";
            } else {
                // Activate
                titleEl.textContent = "Activate Role?";
                actionTextEl.textContent = "activate";
                confirmBtn.className = "btn btn-success";
                confirmBtn.textContent = "Yes, Activate";
                iconWrapper.className = "mb-4 text-success";
            }
        });

        // Delete Modal Logic
        var deleteModal = document.getElementById('deleteRoleModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var action = button.getAttribute('data-action');
            var name = button.getAttribute('data-name');
            var userCount = parseInt(button.getAttribute('data-user-count') || "0");

            var form = deleteModal.querySelector('#deleteRoleForm');
            var nameEl = deleteModal.querySelector('#deleteRoleName');
            var countAlert = deleteModal.querySelector('#deleteUserCountAlert');
            var countEl = deleteModal.querySelector('#deleteUserCount');

            form.action = action;
            nameEl.textContent = name;

            if (userCount > 0) {
                countEl.textContent = userCount;
                countAlert.classList.remove('d-none');
            } else {
                countAlert.classList.add('d-none');
            }
        });
    </script>
}
