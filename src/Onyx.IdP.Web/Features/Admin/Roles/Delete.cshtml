@model Onyx.IdP.Web.Features.Admin.Roles.DeleteRoleViewModel
@{
    ViewData["Title"] = "Delete Role";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="auth-card">
            <h2 class="auth-title text-danger">Delete Role</h2>
            <p class="auth-subtitle mb-4">Are you sure you want to delete the role <strong>@Model.Name</strong>?</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                @if (Model.UserCount > 0)
                {
                    <div class="alert alert-danger">
                        <strong>Warning:</strong> This role receives @Model.UserCount users.
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="UnassignUsers" type="hidden" value="true" />
                            <p class="text-sm">Deleting this role will automatically unassign it from all users.</p>
                        </div>
                    </div>
                    <div class="auth-footer d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-ghost">Cancel</a>
                        <button type="submit" class="btn btn-danger">Unassign Users & Delete Layout</button>
                    </div>
                }
                else
                {
                    <div class="auth-footer d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-ghost">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete Role</button>
                    </div>
                }
            </form>
        </div>
    </div>
</div>
