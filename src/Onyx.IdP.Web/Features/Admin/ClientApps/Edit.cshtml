@model Onyx.IdP.Web.Features.Admin.ClientApps.ClientAppFormViewModel
@{
    ViewData["Title"] = "Edit Client Application";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 page-title">@Model.DisplayName</h1>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <partial name="_Form" model="Model" />

                <div class="d-flex gap-2 mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-ghost">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
