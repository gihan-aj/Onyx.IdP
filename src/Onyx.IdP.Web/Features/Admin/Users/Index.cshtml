@model Onyx.IdP.Web.Features.Admin.Users.UsersViewModel
@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}

<div class="data-table-container">
    <div class="table-controls">
        <form asp-action="Index" method="get" class="search-box">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search users..." />
            <input type="hidden" name="sortColumn" value="@Model.SortColumn" />
            <input type="hidden" name="sortDirection" value="@Model.SortDirection" />
        </form>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-sortColumn="Email" 
                       asp-route-sortDirection="@(Model.SortColumn == "Email" && Model.SortDirection == "asc" ? "desc" : "asc")">
                        User
                        @if (Model.SortColumn == "Email")
                        {
                            <span>@(Model.SortDirection == "asc" ? "↑" : "↓")</span>
                        }
                    </a>
                </th>
                <th>Roles</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <div class="avatar-placeholder rounded-circle bg-light">
                                    @(user.Email[0].ToString().ToUpper())
                                </div>
                                <div>
                                    <div class="font-weight-bold">
                                        @user.FullName
                                        @if (user.IsProtected)
                                        {
                                            <i data-lucide="shield" class="w-4 h-4 text-muted ms-1 d-inline" style="width:14px; height:14px;"></i>
                                        }
                                    </div>
                                    <div class="text-muted small">@user.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                if (role.IsActive) 
                                {
                                    <span class="badge badge-primary me-1">@role.Name</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-white me-1" data-tooltip="Inactive Role">@role.Name</span>
                                }
                            }
                        </td>
                        <td>
                            @if (!user.IsActive)
                            {
                                <span class="badge bg-secondary text-white">Deactivated</span>
                            }
                            else if (user.IsLockedOut)
                            {
                                <span class="badge bg-danger text-white">Locked</span>
                            }
                            else if (user.EmailConfirmed)
                            {
                                <span class="badge bg-success text-white">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-icon" data-tooltip="Edit">
                                    <i data-lucide="edit-2"></i>
                                </a>
                                
                                @if (!user.IsProtected)
                                {
                                    <button type="button" 
                                            class="btn btn-icon @(user.IsLockedOut ? "text-success" : "text-warning")"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#toggleLockModal"
                                            data-action="@Url.Action("ToggleLock", new { id = user.Id })"
                                            data-email="@user.Email"
                                            data-locked="@user.IsLockedOut.ToString().ToLower()"
                                            data-tooltip="@(user.IsLockedOut ? "Unlock" : "Lock")">
                                        <i data-lucide="@(user.IsLockedOut ? "unlock" : "lock")"></i>
                                    </button>

                                    <button type="button" 
                                            class="btn btn-icon @(user.IsActive ? "text-danger" : "text-success")"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#toggleUserModal"
                                            data-action="@Url.Action("ToggleActive", new { id = user.Id })"
                                            data-email="@user.Email"
                                            data-active="@user.IsActive.ToString().ToLower()"
                                            data-tooltip="@(user.IsActive ? "Deactivate" : "Activate")">
                                        <i data-lucide="@(user.IsActive ? "power-off" : "power")"></i>
                                    </button>

                                    <button type="button" 
                                            class="btn btn-icon text-danger"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteUserModal"
                                            data-action="@Url.Action("Delete", new { id = user.Id })"
                                            data-email="@user.Email"
                                            data-tooltip="Delete">
                                        <i data-lucide="trash-2"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-icon disabled" disabled data-tooltip="Protected">
                                        <i data-lucide="lock" class="text-muted opacity-50"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center py-4">
                        <span class="text-muted">No users found.</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="table-pagination">
        @if (Model.HasPreviousPage)
        {
            <a asp-action="Index" 
               asp-route-page="@(Model.Page - 1)" 
               asp-route-searchTerm="@Model.SearchTerm" 
               asp-route-sortColumn="@Model.SortColumn" 
               asp-route-sortDirection="@Model.SortDirection" 
               class="page-link">
                Previous
            </a>
        }
        else
        {
            <span class="page-link disabled">Previous</span>
        }

        <span class="text-muted small">Page @Model.Page of @Model.TotalPages</span>

        @if (Model.HasNextPage)
        {
            <a asp-action="Index" 
               asp-route-page="@(Model.Page + 1)" 
               asp-route-searchTerm="@Model.SearchTerm" 
               asp-route-sortColumn="@Model.SortColumn" 
               asp-route-sortDirection="@Model.SortDirection" 
               class="page-link">
                Next
            </a>
        }
        else
        {
            <span class="page-link disabled">Next</span>
        }
    </div>
</div>

<!-- Toggle User Active Modal -->
<div class="modal fade" id="toggleUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div id="toggleUserIconWrapper" class="mb-4">
                    <i data-lucide="power" style="width: 48px; height: 48px;"></i>
                </div>
                
                <h2 id="toggleUserTitle" class="card-title mb-3"></h2>
                
                <p class="card-text text-muted mb-4">
                    Are you sure you want to <strong id="toggleUserActionText"></strong> the user <strong id="toggleUserEmail"></strong>?
                </p>

                <form id="toggleUserForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="d-grid gap-2">
                        <button id="toggleUserConfirmBtn" type="submit" class="btn">Confirm</button>
                        <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Toggle User Lock Modal -->
<div class="modal fade" id="toggleLockModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div id="toggleLockIconWrapper" class="mb-4">
                    <!-- Icon will be toggled via JS if possible, or just generic lock -->
                    <i id="toggleLockIcon" data-lucide="lock" style="width: 48px; height: 48px;"></i>
                </div>
                
                <h2 id="toggleLockTitle" class="card-title mb-3"></h2>
                
                <p class="card-text text-muted mb-4">
                    Are you sure you want to <strong id="toggleLockActionText"></strong> the user <strong id="toggleLockEmail"></strong>?
                </p>

                <form id="toggleLockForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="d-grid gap-2">
                        <button id="toggleLockConfirmBtn" type="submit" class="btn">Confirm</button>
                        <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center p-5">
                <div class="mb-4 text-danger">
                    <i data-lucide="alert-triangle" style="width: 48px; height: 48px;"></i>
                </div>
                
                <h2 class="card-title mb-3">Delete User?</h2>
                
                <p class="card-text text-muted mb-4">
                    Are you sure you want to delete the user <strong id="deleteUserEmail"></strong>?
                    <br/>
                    This action cannot be undone.
                </p>

                <form id="deleteUserForm" method="post">
                    @Html.AntiForgeryToken()
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">Yes, Delete User</button>
                        <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle Active Logic
        var toggleUserModal = document.getElementById('toggleUserModal');
        toggleUserModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var action = button.getAttribute('data-action');
            var email = button.getAttribute('data-email');
            var isActive = button.getAttribute('data-active') === 'true';

            var form = toggleUserModal.querySelector('#toggleUserForm');
            var titleEl = toggleUserModal.querySelector('#toggleUserTitle');
            var actionTextEl = toggleUserModal.querySelector('#toggleUserActionText');
            var emailEl = toggleUserModal.querySelector('#toggleUserEmail');
            var confirmBtn = toggleUserModal.querySelector('#toggleUserConfirmBtn');
            var iconWrapper = toggleUserModal.querySelector('#toggleUserIconWrapper');

            form.action = action;
            emailEl.textContent = email;

            if (isActive) {
                // Deactivate
                titleEl.textContent = "Deactivate User?";
                actionTextEl.textContent = "deactivate";
                confirmBtn.className = "btn btn-danger";
                confirmBtn.textContent = "Yes, Deactivate";
                iconWrapper.className = "mb-4 text-danger";
            } else {
                // Activate
                titleEl.textContent = "Activate User?";
                actionTextEl.textContent = "activate";
                confirmBtn.className = "btn btn-success";
                confirmBtn.textContent = "Yes, Activate";
                iconWrapper.className = "mb-4 text-success";
            }
        });

        // Toggle Lock Logic
        var toggleLockModal = document.getElementById('toggleLockModal');
        toggleLockModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var action = button.getAttribute('data-action');
            var email = button.getAttribute('data-email');
            var isLocked = button.getAttribute('data-locked') === 'true';

            var form = toggleLockModal.querySelector('#toggleLockForm');
            var titleEl = toggleLockModal.querySelector('#toggleLockTitle');
            var actionTextEl = toggleLockModal.querySelector('#toggleLockActionText');
            var emailEl = toggleLockModal.querySelector('#toggleLockEmail');
            var confirmBtn = toggleLockModal.querySelector('#toggleLockConfirmBtn');
            var iconWrapper = toggleLockModal.querySelector('#toggleLockIconWrapper');

            form.action = action;
            emailEl.textContent = email;

            if (isLocked) {
                // Unlock
                titleEl.textContent = "Unlock User?";
                actionTextEl.textContent = "unlock";
                confirmBtn.className = "btn btn-success";
                confirmBtn.textContent = "Yes, Unlock";
                iconWrapper.className = "mb-4 text-success";
            } else {
                // Lock
                titleEl.textContent = "Lock User?";
                actionTextEl.textContent = "lock";
                confirmBtn.className = "btn btn-warning"; // Warning for lock
                confirmBtn.textContent = "Yes, Lock";
                iconWrapper.className = "mb-4 text-warning";
            }
        });

        // Delete Logic
        var deleteUserModal = document.getElementById('deleteUserModal');
        deleteUserModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var action = button.getAttribute('data-action');
            var email = button.getAttribute('data-email');

            var form = deleteUserModal.querySelector('#deleteUserForm');
            var emailEl = deleteUserModal.querySelector('#deleteUserEmail');

            form.action = action;
            emailEl.textContent = email;
        });
    </script>
}
