@model Onyx.IdP.Web.Features.Admin.Users.UsersViewModel
@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}

<div class="data-table-container">
    <div class="table-controls">
        <form asp-action="Index" method="get" class="search-box">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search users..." />
            <input type="hidden" name="sortColumn" value="@Model.SortColumn" />
            <input type="hidden" name="sortDirection" value="@Model.SortDirection" />
        </form>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-sortColumn="Email" 
                       asp-route-sortDirection="@(Model.SortColumn == "Email" && Model.SortDirection == "asc" ? "desc" : "asc")">
                        User
                        @if (Model.SortColumn == "Email")
                        {
                            <span>@(Model.SortDirection == "asc" ? "↑" : "↓")</span>
                        }
                    </a>
                </th>
                <th>Roles</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <div class="avatar-placeholder rounded-circle bg-light">
                                    @(user.Email[0].ToString().ToUpper())
                                </div>
                                <div>
                                    <div class="font-weight-bold">
                                        @user.FullName
                                        @if (user.IsProtected)
                                        {
                                            <i data-lucide="shield" class="w-4 h-4 text-muted ms-1 d-inline" style="width:14px; height:14px;"></i>
                                        }
                                    </div>
                                    <div class="text-muted small">@user.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                if (role.IsActive) 
                                {
                                    <span class="badge badge-primary me-1">@role.Name</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-white me-1" data-tooltip="Inactive Role">@role.Name</span>
                                }
                            }
                        </td>
                        <td>
                            @if (!user.IsActive)
                            {
                                <span class="badge bg-secondary text-white">Deactivated</span>
                            }
                            else if (user.IsLockedOut)
                            {
                                <span class="badge bg-danger text-white">Locked</span>
                            }
                            else if (user.EmailConfirmed)
                            {
                                <span class="badge bg-success text-white">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-icon" data-tooltip="Edit">
                                    <i data-lucide="edit-2"></i>
                                </a>
                                
                                @if (!user.IsProtected)
                                {
                                    <button type="button" 
                                            class="btn btn-icon @(user.IsLockedOut ? "text-success" : "text-warning")"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#confirmModal"
                                            data-action="@Url.Action("ToggleLock", new { id = user.Id })"
                                            data-message="Are you sure you want to @(user.IsLockedOut ? "unlock" : "lock") <strong>@user.Email</strong>?"
                                            data-tooltip="@(user.IsLockedOut ? "Unlock" : "Lock")">
                                        <i data-lucide="@(user.IsLockedOut ? "unlock" : "lock")"></i>
                                    </button>

                                    <button type="button" 
                                            class="btn btn-icon @(user.IsActive ? "text-danger" : "text-success")"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#confirmModal"
                                            data-action="@Url.Action("ToggleActive", new { id = user.Id })"
                                            data-message="Are you sure you want to @(user.IsActive ? "deactivate" : "activate") <strong>@user.Email</strong>?"
                                            data-tooltip="@(user.IsActive ? "Deactivate" : "Activate")">
                                        <i data-lucide="@(user.IsActive ? "power-off" : "power")"></i>
                                    </button>

                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-icon text-danger" data-tooltip="Delete">
                                        <i data-lucide="trash-2"></i>
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-icon disabled" disabled data-tooltip="Protected">
                                        <i data-lucide="lock" class="text-muted opacity-50"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center py-4">
                        <span class="text-muted">No users found.</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="table-pagination">
        @if (Model.HasPreviousPage)
        {
            <a asp-action="Index" 
               asp-route-page="@(Model.Page - 1)" 
               asp-route-searchTerm="@Model.SearchTerm" 
               asp-route-sortColumn="@Model.SortColumn" 
               asp-route-sortDirection="@Model.SortDirection" 
               class="page-link">
                Previous
            </a>
        }
        else
        {
            <span class="page-link disabled">Previous</span>
        }

        <span class="text-muted small">Page @Model.Page of @Model.TotalPages</span>

        @if (Model.HasNextPage)
        {
            <a asp-action="Index" 
               asp-route-page="@(Model.Page + 1)" 
               asp-route-searchTerm="@Model.SearchTerm" 
               asp-route-sortColumn="@Model.SortColumn" 
               asp-route-sortDirection="@Model.SortDirection" 
               class="page-link">
                Next
            </a>
        }
        else
        {
            <span class="page-link disabled">Next</span>
        }
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage">Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Cancel</button>
                <form id="confirmForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var confirmModal = document.getElementById('confirmModal');
        confirmModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var action = button.getAttribute('data-action');
            var message = button.getAttribute('data-message');

            var form = confirmModal.querySelector('#confirmForm');
            var messageEl = confirmModal.querySelector('#confirmMessage');

            form.action = action;
            messageEl.innerHTML = message;
        });
    </script>
}
