@model Onyx.IdP.Web.Features.Admin.Users.DeleteUserViewModel
@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="auth-card">
            <h2 class="auth-title text-danger">Delete User</h2>
            <p class="auth-subtitle mb-4">Are you sure you want to delete the user <strong>@Model.Email</strong>?</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <div class="alert alert-danger">
                    <strong>Warning:</strong> This action cannot be undone.
                </div>

                <div class="auth-footer d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-ghost">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete User</button>
                </div>
            </form>
        </div>
    </div>
</div>
